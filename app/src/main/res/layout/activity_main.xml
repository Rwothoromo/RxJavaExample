<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/click_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counter1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:textSize="24sp"
            android:text="@string/_0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counter2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/counter1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:textSize="24sp"
            android:text="@string/_0"/>
    <TextView
            android:text="@string/before_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeThrottle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/counter1"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <TextView
            android:text="@string/after_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afterThrottle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/beforeThrottle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/counter2"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>